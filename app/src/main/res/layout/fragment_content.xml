<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.magicsu.android.zhbj.view.NoScrollViewPager
        android:id="@+id/view_pager_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/radio_group_tab"
        android:orientation="horizontal"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/tab_home"
            android:checked="true"
            style="@style/BottomTabStyle"
            android:text="首页"
            android:drawableTop="@drawable/selector_tab_home" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/tab_news"
            style="@style/BottomTabStyle"
            android:text="新闻中心"
            android:drawableTop="@drawable/selector_tab_news" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/tab_smart"
            style="@style/BottomTabStyle"
            android:text="智慧服务"
            android:drawableTop="@drawable/selector_tab_smart" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/tab_gov"
            style="@style/BottomTabStyle"
            android:text="政务"
            android:drawableTop="@drawable/selector_tab_gov" />
        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/tab_setting"
            style="@style/BottomTabStyle"
            android:text="设置"
            android:drawableTop="@drawable/selector_tab_setting" />

    </RadioGroup>

</LinearLayout>